<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Css/App.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controller.Admin.AdminDetermineWindowController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.52" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../wrightelectric.jpg" />
         </image>
      </ImageView>
      <Button fx:id="backButton" layoutX="27.0" layoutY="337.0" mnemonicParsing="false" onAction="#back" text="Cofnij" />
      <Label fx:id="clockLabel" layoutX="520.0" layoutY="23.0" text="00:00:00" />
      <Label id="head" fx:id="salary" layoutX="214.0" layoutY="41.0" text="Ustal pensję pracownika">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="workerComboBox" layoutX="225.0" layoutY="109.0" onAction="#workerChoice" prefWidth="150.0" />
      <Label fx:id="worker" layoutX="61.0" layoutY="113.0" text="Wybierz pracownika" />
      <TextField fx:id="salaryTextField" layoutX="225.0" layoutY="187.0" />
      <Label fx:id="isalary" layoutX="67.0" layoutY="191.0" text="Wprowadź pensję" />
